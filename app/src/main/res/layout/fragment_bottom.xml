<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"

    android:background="@color/primary"
    android:fitsSystemWindows="true"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_gps_fixed_white_18dp"
                android:layout_gravity="top"
                android:layout_marginRight="36dp"/>
            <TextView
                android:id="@+id/from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:onClick="changeLocation"
                android:textColor="@android:color/white"
                android:text="@string/your_location"/>
        </LinearLayout>


    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="48dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_place_white_18dp"
                android:layout_gravity="bottom"
                android:layout_marginRight="36dp"/>

            <TextView
            android:id="@+id/to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="changeLocation"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:alpha="0.54"
            android:textColor="@android:color/white"
            android:text="Choisir destination"/>

            </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
    <ImageButton
        android:clickable="true"
        android:onClick="swap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_swap_vert_white_24dp"
        android:background="@null"/>
    </RelativeLayout>
</LinearLayout>